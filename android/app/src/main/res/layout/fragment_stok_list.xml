<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">



		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginBottom="0dp"
			android:background="#ffffff"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#1565C0"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/imageView"
					android:layout_width="85dp"
					android:layout_height="71dp"
					android:layout_marginTop="2dp"
					android:layout_marginBottom="10dp"
					app:srcCompat="@drawable/logo" />

				<TextView
					android:id="@+id/textView"
					android:layout_width="0dp"
					android:layout_height="73dp"
					android:layout_weight="1"
					android:gravity="center"
					android:text="STOK BARANG"
					android:textColor="@android:color/white"
					android:textSize="30sp"

					android:textStyle="bold" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_margin="2dp"
				android:layout_marginBottom="75dp"
				android:orientation="vertical">

				<TextView
					android:id="@+id/textView2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Data Stok Barang Terakhir"
					android:textColor="#f21400"
					android:textSize="20sp"
					android:textStyle="bold" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="2dp"
					android:background="@color/gray"
					android:orientation="horizontal"
					tools:layout_editor_absoluteX="5dp"
					tools:layout_editor_absoluteY="2dp">

					<LinearLayout
						android:layout_width="180dp"
						android:layout_height="wrap_content"
						android:layout_marginTop="6dp"
						android:layout_weight="1"
						android:gravity="end"
						android:orientation="vertical">

						<TextView
							android:id="@+id/stok_tvHeaderNamaBarang"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="Barang"
							android:textAlignment="textStart"
							android:textColor="@color/black"
							android:textSize="20sp"
							android:textStyle="bold" />
					</LinearLayout>

					<LinearLayout
						android:layout_width="15dp"
						android:layout_height="wrap_content"
						android:layout_marginTop="6dp"
						android:layout_weight="1"
						android:gravity="end"
						android:orientation="vertical">

						<TextView
							android:id="@+id/stok_tvHeaderSatuan"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="Satuan"
							android:textAlignment="textEnd"
							android:textColor="@color/black"
							android:textSize="20sp"
							android:textStyle="bold" />
					</LinearLayout>

					<LinearLayout
						android:layout_width="10dp"
						android:layout_height="wrap_content"
						android:layout_marginTop="6dp"
						android:layout_weight="1"
						android:gravity="end"
						android:orientation="vertical">

						<TextView
							android:id="@+id/stok_tvHeaderQty"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginEnd="3dp"
							android:text="Qty"
							android:textAlignment="textEnd"
							android:textColor="@color/black"
							android:textSize="20sp"
							android:textStyle="bold" />
					</LinearLayout>
				</LinearLayout>

				<View
					android:id="@+id/stok_view"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_margin="1dp"
					android:background="@color/blue" />

				<ListView
					android:id="@+id/stok_listview"
					android:backgroundTint="@color/float_transparent"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@drawable/border_listview"/>
			</LinearLayout>
		</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
