<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="2dp"
	android:background="@android:color/white"
	android:orientation="vertical">

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginBottom="5dp"
		android:background="@android:color/white"
		app:layout_constraintTop_toTopOf="parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:background="@android:color/white"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/rcb_tvNama"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:text="{Nama}"
				android:ellipsize="none"
				android:scrollHorizontally="false"
				android:textColor="@color/error_stroke_color"
				android:textSize="18sp"
				android:textStyle="bold"
				android:maxEms="15"
				android:layout_marginStart="5dp"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				tools:layout_editor_absoluteX="133dp" />

			<TextView
				android:id="@+id/rcb_tvSatuan"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="{Satuan}"
				android:textSize="18sp"
				android:layout_marginStart="5dp"
				android:textColor="@color/error_stroke_color"
				app:layout_constraintStart_toEndOf="@+id/textView2"
				app:layout_constraintTop_toBottomOf="@+id/rcb_tvNama" />

			<TextView
				android:id="@+id/rcb_tvHarga"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="{Harga}"
				android:textSize="18sp"
				android:layout_marginStart="5dp"
				android:textColor="@color/error_stroke_color"
				app:layout_constraintStart_toEndOf="@+id/textView3"
				app:layout_constraintTop_toBottomOf="@+id/rcb_tvSatuan" />

			<TextView
				android:id="@+id/rcb_tvQty"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="{Qty}"
				android:textColor="@color/error_stroke_color"
				android:textSize="18sp"
				android:layout_marginStart="5dp"

				app:layout_constraintStart_toEndOf="@+id/textView4"
				app:layout_constraintTop_toBottomOf="@+id/rcb_tvHarga" />

			<TextView
				android:id="@+id/rcb_tvSubtotal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="{Sub total}"
				android:textColor="@color/error_stroke_color"
				android:textSize="18sp"
				android:textStyle="bold"
				android:layout_marginBottom="5dp"
				android:layout_marginStart="5dp"
				app:layout_constraintStart_toEndOf="@+id/textView5"
				app:layout_constraintTop_toBottomOf="@+id/rcb_tvQty" />

			<TextView
				android:id="@+id/labelSatuan"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Satuan"
				android:textSize="18sp"
				android:layout_marginStart="5dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/rcb_tvNama"
				tools:layout_editor_absoluteY="29dp" />

			<TextView
				android:id="@+id/labelHarga"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Harga"
				android:textSize="18sp"
				app:layout_constraintStart_toStartOf="@+id/labelSatuan"
				app:layout_constraintTop_toBottomOf="@+id/labelSatuan" />

			<TextView
				android:id="@+id/labelQty"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Qty"
				android:textSize="18sp"
				app:layout_constraintStart_toStartOf="@+id/labelHarga"
				app:layout_constraintTop_toBottomOf="@+id/labelHarga" />

			<TextView
				android:id="@+id/labelSubtotal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Sub total"
				android:textSize="18sp"
				app:layout_constraintStart_toStartOf="@+id/labelQty"
				app:layout_constraintTop_toBottomOf="@+id/labelQty" />

			<TextView
				android:id="@+id/textView2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=":"
				android:textSize="18sp"
				android:layout_marginStart="20dp"
				app:layout_constraintStart_toEndOf="@+id/labelSatuan"
				app:layout_constraintTop_toBottomOf="@+id/rcb_tvNama"
				tools:layout_editor_absoluteX="124dp"
				tools:layout_editor_absoluteY="29dp" />

			<TextView
				android:id="@+id/textView3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=":"
				android:textSize="18sp"
				app:layout_constraintStart_toStartOf="@+id/textView2"
				app:layout_constraintTop_toBottomOf="@+id/textView2" />

			<TextView
				android:id="@+id/textView4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=":"
				android:textSize="18sp"
				app:layout_constraintStart_toStartOf="@+id/textView3"
				app:layout_constraintTop_toBottomOf="@+id/textView3" />

			<TextView
				android:id="@+id/textView5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=":"
				android:textSize="18sp"
				app:layout_constraintStart_toStartOf="@+id/textView4"
				app:layout_constraintTop_toBottomOf="@+id/textView4" />

			<ImageView
				android:id="@+id/rcb_imgDetail"
				android:layout_width="50dp"
				android:layout_height="45dp"
				android:background="@android:color/white"
				android:src="@drawable/ic_baseline_navigate_next_24"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintVertical_bias="0.509" />
		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
